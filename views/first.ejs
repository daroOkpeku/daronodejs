<!DOCTYPE html>
<html lang="en">
    <%- include('./partial/head.ejs') %>
<body>

    <%- include('./partial/nav.ejs') %>

    <div class="blogs content">
        <h2>All Blogs</h2>

        <%  if(blogs.length > 0){ %>

            <% blogs.map((item)=>{%>
                <a href="/blog/<%= item.id %>">
                <h3 class="title"><%=item.title %></h3>
                <p class="snippet"><%=item.snippet %></p>
            </a>
            <% }) %>
       <%  } else { %>

        <h3 class="title">no data availiable</h3> 
        <% } %>
    </div>

    <%- include('./partial/footer.ejs') %>

</body>
</html>